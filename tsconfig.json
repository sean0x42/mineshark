{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist/**/*",
    "**/*.test.ts",
    "**/__snapshots__/*",
    "**/__fixtures__/*"
  ]
}
